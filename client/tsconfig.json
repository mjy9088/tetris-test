{
  "compilerOptions": {
    "outDir": "./build/",
    "strict": true,
    "noImplicitAny": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "_/*": ["./*"]
    },
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules"
  ]
}
